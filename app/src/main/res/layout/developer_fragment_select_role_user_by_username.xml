<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_dev_role_user_username"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DeveloperSystemSafeActivity">

    <LinearLayout
        android:id="@+id/ll_role_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <work.lpssfxy.www.campuslifeassistantclient.base.edit.PowerfulEditText
            android:id="@+id/edit_dev_role_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/register_username"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/sp_15"
            app:BtnSpacing="@dimen/dp_24"
            app:BtnWidth="@dimen/dp_25"
            app:borderStyle="halfRect"
            app:clearDrawable="@mipmap/edit_clear_all"
            app:styleColor="#ff0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="功能说明：通过用户名查询该用户的对应的角色"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_dev_role_user_username"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/orderlist_refund_selector"
            android:text="@string/start_select"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_role_user_list_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_role_user"
        android:gravity="center"
        android:text="点击查询在此处展示数据"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />
</RelativeLayout>