<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DeveloperSystemSafeActivity">

    <LinearLayout
        android:id="@+id/ll_role_user_info_role_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <work.lpssfxy.www.campuslifeassistantclient.base.edit.PowerfulEditText
            android:id="@+id/edit_dev_role_user_info_role_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/role_id"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="@dimen/sp_15"
            app:BtnSpacing="@dimen/dp_24"
            app:BtnWidth="@dimen/dp_25"
            app:borderStyle="halfRect"
            app:clearDrawable="@mipmap/edit_clear_all"
            app:styleColor="#ff0000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="功能说明：通过角色编号查询该角色专属全部用户的信息\n(1 = 学生、2 = 超管、3 = 跑腿、4 = 商家)"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>