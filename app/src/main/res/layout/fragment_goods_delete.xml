<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_delete_goods_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.DeveloperSystemSafeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_50">

            <work.lpssfxy.www.campuslifeassistantclient.base.edit.PowerfulEditText
                android:id="@+id/edit_delete_goods_by_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入商品编号"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp_15"
                app:BtnSpacing="@dimen/dp_24"
                app:BtnWidth="@dimen/dp_25"
                app:borderStyle="halfRect"
                app:clearDrawable="@mipmap/edit_clear_all"
                app:styleColor="#ff0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:text="功能说明：通过商品编号，实时删除店铺商品信息"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/btn_delete_goods_by_id"
                style="@style/ButtonView.Blue"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="确定删除"
                android:textSize="@dimen/sp_14"
                app:textNormalTextColor="@color/white"
                app:textRadius="8dp"
                app:textSelectedTextColor="#FF6565" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Grey700" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_50">

            <work.lpssfxy.www.campuslifeassistantclient.base.edit.PowerfulEditText
                android:id="@+id/edit_delete_goods_by_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入商品名称"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="@dimen/sp_15"
                app:BtnSpacing="@dimen/dp_24"
                app:BtnWidth="@dimen/dp_25"
                app:borderStyle="halfRect"
                app:clearDrawable="@mipmap/edit_clear_all"
                app:styleColor="#ff0000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:padding="@dimen/dp_15"
                android:text="功能说明：通过商品名称，实时删除店铺商品信息"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/btn_delete_goods_by_name"
                style="@style/ButtonView.Blue"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="确定删除"
                android:textSize="@dimen/sp_14"
                app:textNormalTextColor="@color/white"
                app:textRadius="8dp"
                app:textSelectedTextColor="#FF6565" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>