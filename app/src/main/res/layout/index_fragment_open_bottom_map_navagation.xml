<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/index_map_white_selector"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        tools:ignore="RtlSymmetry">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/index_map_white_selector"
            android:src="@mipmap/index_map_navication_mode" />

        <TextView
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/index_map_white_selector"
            android:text="选择导航方式>>"
            android:textColor="@color/Blue"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll_bottom_baidu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/index_map_white_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/index_map_white_selector"
            android:src="@mipmap/index_map_baidu" />

        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_50"
            android:text="百度地图" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll_bottom_gaode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/index_map_white_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/index_map_white_selector"
            android:src="@mipmap/index_map_gaode" />

        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_50"
            android:text="高德地图" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll_bottom_tencent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/index_map_white_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/index_map_white_selector"
            android:src="@mipmap/index_map_tencent" />

        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_50"
            android:text="腾讯地图" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/ll_bottom_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@drawable/index_map_white_selector"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/index_map_white_selector"
            android:src="@mipmap/index_map_cancel" />

        <TextView
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_50"
            android:text="取消导航" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent" />
</LinearLayout>