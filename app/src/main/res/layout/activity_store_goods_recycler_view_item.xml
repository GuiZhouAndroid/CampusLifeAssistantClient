<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_180"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_address_my_info"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_goods_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/dp_30"
                        android:paddingEnd="@dimen/dp_5"
                        android:textColor="@color/app_color_red"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="青椒肉丝盖饭"
                        android:textColor="@color/Grey900"
                        android:textSize="@dimen/sp_20" />

                    <TextView
                        android:id="@+id/tv_goods_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="(盖饭类)"
                        android:textColor="@color/Grey900"
                        android:textSize="@dimen/sp_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_goods_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:paddingEnd="@dimen/dp_30"
                            android:text="10元/份"
                            android:textColor="@color/app_color_red"
                            android:textSize="@dimen/sp_16"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/tv_goods_repertory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="end"
                            android:paddingEnd="@dimen/dp_20"
                            android:text="(库存:97份)"
                            android:textColor="@color/Grey700"
                            android:textSize="@dimen/sp_14"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/dp_10"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/tv_goods_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingStart="@dimen/dp_20"
                            android:text="我是青椒肉丝盖饭的描述呀，快来买我呀"
                            android:textColor="@color/Grey700"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingEnd="@dimen/dp_10"
                        tools:ignore="RtlSymmetry">

                        <ImageView
                            android:id="@+id/iv_goods_pic"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_80"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    tools:ignore="RtlSymmetry">

                    <TextView
                        android:id="@+id/tv_goods_create"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:paddingStart="@dimen/dp_20"
                        android:text="上架时间：2021-12-13 18:33:43"
                        android:textColor="@color/Grey700"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_goods_flag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingEnd="@dimen/dp_30"
                        android:text="(已上架)"
                        android:textColor="@color/Grey700"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

