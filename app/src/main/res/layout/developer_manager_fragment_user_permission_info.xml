<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/xui_actionbar_height"
        android:background="@color/xui_config_color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_user_permission_info"
            style="@style/TabLayoutStyle"
            android:layout_width="0dp"
            android:layout_height="?attr/xui_actionbar_height"
            android:layout_weight="1"
            android:alpha="0" />
        <TextView
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:id="@+id/tv_onclick_open_user_permission_info"
            android:text="@string/onclick_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_switch_user_permission_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:padding="@dimen/dp_10"
            app:srcCompat="@mipmap/plus" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_user_permission_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>