<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_address_update_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/welcome_colorMain"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_address_update_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center"
            android:ellipsize="none"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_5"
            android:src="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="编辑收货地址"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/tv_forward"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_address_update_title">

        <LinearLayout
            android:id="@+id/ll_add_address_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="收货人："
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:id="@+id/edit_address_update_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入收货人姓名"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/white"
                    app:cet_clearIcon="@drawable/ic_baseline_cancel_24"
                    app:cet_clearIconSize="@dimen/default_clear_icon_size" />

                <com.xuexiang.xui.widget.flowlayout.FlowTagLayout
                    android:id="@+id/flowlayout_address_update_gender"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3.5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="联系电话："
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextViewEdits" />

                <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:id="@+id/edit_address_update_mobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="请输入手机号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/white"
                    app:cet_clearIcon="@drawable/ic_baseline_cancel_24"
                    app:cet_clearIconSize="@dimen/default_clear_icon_size"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_address_choose_update_district"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="所在校区："
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_address_update_district"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:hint="点我选择校区"
                    android:textColor="@color/yellow"
                    android:textSize="13sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:text="详细地点："
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextViewEdits" />

                <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:id="@+id/edit_address_update_place"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="输入模苑、篮球场、勤学楼或其它"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/white"
                    app:cet_clearIcon="@drawable/ic_baseline_cancel_24"
                    app:cet_clearIconSize="@dimen/default_clear_icon_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:text="配送楼层："
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextViewEdits" />

                <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:id="@+id/edit_address_update_floor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="输入楼层数(1楼、2楼、无楼层)"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/white"
                    app:cet_clearIcon="@drawable/ic_baseline_cancel_24"
                    app:cet_clearIconSize="@dimen/default_clear_icon_size"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:text="门牌号："
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText,RtlSymmetry,TextViewEdits" />

                <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:id="@+id/edit_address_update_street"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@null"
                    android:hint="输入宿舍号、教室号、机房号"
                    android:textColor="@color/yellow"
                    android:textColorHint="@color/white"
                    app:cet_clearIcon="@drawable/ic_baseline_cancel_24"
                    app:cet_clearIconSize="@dimen/default_clear_icon_size" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@color/white" />

            <com.xuexiang.xui.widget.button.ButtonView
                android:id="@+id/btn_do_update_address"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/address_ok_update"
                android:textSize="@dimen/sp_14"
                app:textNormalTextColor="@color/white"
                app:textRadius="8dp"
                app:textSelectedTextColor="#FF6565"
                app:textSolidColor='@color/welcome_colorMain' />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
