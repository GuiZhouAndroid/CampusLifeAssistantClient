<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_dev_select_all_role_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.DeveloperSystemSafeActivity">

    <com.xuexiang.xui.widget.textview.MarqueeTextView
        android:id="@+id/mtv_count_role_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_30"
        android:paddingEnd="@dimen/dp_30">

        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/btn_search_role"
            style="@style/ButtonView.Blue"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/search_role"
            android:textSize="@dimen/sp_13"
            app:textNormalTextColor="@color/white"
            app:textRadius="8dp"
            app:textSelectedTextColor="#FF6565" />

        <com.xuexiang.xui.widget.button.ButtonView
            android:id="@+id/btn_add_role"
            style="@style/ButtonView.Blue"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/new_add_role"
            android:textSize="@dimen/sp_13"
            app:textNormalTextColor="@color/white"
            app:textRadius="8dp"
            app:textSelectedTextColor="#FF6565" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_role_info_table_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical" />

</LinearLayout>