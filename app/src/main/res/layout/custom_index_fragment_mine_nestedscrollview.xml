<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout

        android:id="@+id/rl_herd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 填满ImageView-->
        <ImageView
            android:id="@+id/qq_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/qq_head"
            android:layout_width="@dimen/dp_110"
            android:layout_height="@dimen/dp_110"
            android:layout_centerInParent="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/qq_back"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/user_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_25"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="@dimen/dp_15"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/qq_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/user_line"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/qq_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_toEndOf="@id/user_line"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_17" />
        </RelativeLayout>

    </RelativeLayout>

    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/qq_nickname"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_nick_name"
        app:left_text="QQ昵称"
        app:show_right_arrow="false"/>

    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/ll_my_info"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_nick_name"
        app:left_text="我的信息"
        app:right_text="去瞅瞅"/>

    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/ll_my_goods"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_nick_name"
        app:left_text="我的订单"
        app:right_text="下单/发单"/>

    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/ll_report_center"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_pass"
        app:left_text="举报中心"
        app:right_text="实名/匿名"/>

    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/ll_account_safe"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_pass"
        app:left_text="账户安全"
        app:right_text="申诉/查封"/>


    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/ll_feedback"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_sign_name"
        app:left_text="意见反馈"
        app:show_right_arrow="false"/>

    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/ll_check_update"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_pass"
        app:left_text="检测更新"
        app:show_right_arrow="false"/>

    <work.lpssfxy.www.campuslifeassistantclient.base.index.ItemView
        android:id="@+id/ll_system_set"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        app:left_icon="@drawable/ic_sex"
        app:left_text="系统设置"
        app:show_right_arrow="false"/>

