<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".view.activity.DeveloperSystemSafeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_role_user_info_user_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="用户ID"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/select_role_user_info_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="用户名"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/select_role_user_info_real_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="真实姓名"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/select_role_user_info_role_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="角色ID"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/select_role_user_info_role_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:text="角色名"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/Grey700"
        android:gravity="center"
        android:padding="30dp"
        android:textSize="15sp" />
</LinearLayout>