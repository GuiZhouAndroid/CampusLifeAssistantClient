    <!--自定义Dialog-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- APP全透明沉浸式主题样式，提供item空属性，使用StatusBarUtils工具类 -->
    <style name="AppMainTranslucentTheme" parent="XUITheme.Phone">
        <!--TextInputLayout的hint提示文字颜色-->
        <item name="android:textColorHint">@color/LoginInputBackground</item>
        <!--TextInputLayout的未选中状态颜色-->
        <item name="colorControlNormal">@color/LoginInputBackground</item>
        <!--TextInputLayout的已选中状态颜色-->
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!--QQ-->
    <style name="Assist_Style" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="DemoMainActivity_Button_Style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
    </style>

    <!--提高应用启动速度_解决APP启动时闪白屏-->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash_bg</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <!--index主页浮动按钮-->
    <style name="style_float_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <!--CollapsingToolbarLayout开始主题-->
    <style name="CollTitleTextEndTheme">
        <item name="android:textColor">#00F65A</item>
        <item name="android:textSize">@dimen/sp_30</item>
    </style>

    <!--CollapsingToolbarLayout结束主题-->
    <style name="CollTitleTextStartTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <!--设置超出字符数后提示文字的颜色-->
    <style name="HintError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/bbl_ff0000</item>
    </style>
    <style name="LoginTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/LoginInputBackground</item>
        <item name="android:textSize">@dimen/sp_13</item>
    </style>

    <!--base目录的自定义对话框-->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--base目录的自定义对话框-->
    <style name="DialogStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

