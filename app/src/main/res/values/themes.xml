<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CampusLifeAssistantClient" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--自定义Dialog-->
    <style parent="@android:style/Theme.Dialog" name="dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- 半透明 沉浸式主题样式 -->
    <style name="TranslucentTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!--半透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--半透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- 全透明 沉浸式主题样式 -->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
<!--        &lt;!&ndash; 设置状态栏半透明——解除注释 &ndash;&gt;-->
<!--        <item name="android:windowTranslucentStatus">false</item>-->
<!--        &lt;!&ndash; 设置底部导航栏半透明，默认false黑色，设置true半透明 &ndash;&gt;-->
<!--        <item name="android:windowTranslucentNavigation">true</item>-->

<!--        &lt;!&ndash; Android 5.0+，设置状态栏全透明透明 &ndash;&gt;-->
<!--        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>-->
    </style>

<!--QQ-->
    <style name="Assist_Style" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    <style name="DemoMainActivity_Button_Style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
    </style>

    <!--提高应用启动速度_解决APP启动时闪白屏-->
    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash_bg</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--浮动按钮-->
    <style name="style_float_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <!--CollapsingToolbarLayout开始主题-->
    <style name="CollTitleTextEndTheme">
        <item name="android:textColor">@color/bbl_ff0000</item>
        <item name="android:textSize">@dimen/sp_30</item>
    </style>

    <!--CollapsingToolbarLayout结束主题-->
    <style name="CollTitleTextStartTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/bg_status_bar</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>
</resources>