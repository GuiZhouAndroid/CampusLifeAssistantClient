<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CampusLifeAssistantClient" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--自定义Dialog-->
    <style parent="@android:style/Theme.Dialog" name="dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- 半透明 沉浸式主题样式 -->
    <style name="TranslucentTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!--半透明状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--半透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- 全透明 沉浸式主题样式 -->
    <style name="TranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置状态栏半透明——解除注释 -->
        <item name="android:windowTranslucentStatus">false</item>
        <!-- 设置底部导航栏半透明，默认false黑色，设置true半透明 -->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--启动后全屏显示的方法-->
        <!--解决启动时出现白色背景问题-->
        <!--android开发之提高应用启动速度_splash页面瞬间响应_避免APP启动闪白屏-->
<!--        <item name="android:windowBackground">@mipmap/fullscreen</item>-->
        <!-- Android 5.0+，设置状态栏全透明透明 -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
    </style>
<!--QQ-->
    <style name="Assist_Style" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="DemoMainActivity_Button_Style">
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">3dip</item>
    </style>



</resources>